{% extends 'base.html.twig' %}

{% block body %}
    <h1>Menuitem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menuItem.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if menuItem.createdAt %}{{ menuItem.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nombremenu</th>
                <td>{{ menuItem.nombremenu }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if menuItem.updatedAt %}{{ menuItem.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('menuitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('menuitem_edit', { 'id': menuItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
