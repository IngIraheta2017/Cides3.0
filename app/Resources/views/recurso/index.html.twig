{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recursos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombrerecurso</th>
                <th>Descripcionrecurso</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recurso in recursos %}
            <tr>
                <td><a href="{{ path('recurso_show', { 'id': recurso.id }) }}">{{ recurso.id }}</a></td>
                <td>{{ recurso.nombreRecurso }}</td>
                <td>{{ recurso.descripcionRecurso }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('recurso_show', { 'id': recurso.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('recurso_edit', { 'id': recurso.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recurso_new') }}">Create a new recurso</a>
        </li>
    </ul>
{% endblock %}
