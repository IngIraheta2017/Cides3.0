{% extends 'base.html.twig' %}

{% block body %}
    <h1>Proyecto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proyecto.id }}</td>
            </tr>
            <tr>
                <th>Nombreproyecto</th>
                <td>{{ proyecto.nombreProyecto }}</td>
            </tr>
            <tr>
                <th>Temaproyecto</th>
                <td>{{ proyecto.temaProyecto }}</td>
            </tr>
            <tr>
                <th>Justificacionproyecto</th>
                <td>{{ proyecto.justificacionProyecto }}</td>
            </tr>
            <tr>
                <th>Resultadosesperados</th>
                <td>{{ proyecto.resultadosEsperados }}</td>
            </tr>
            <tr>
                <th>Presupuesto</th>
                <td>{{ proyecto.presupuesto }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('proyecto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('proyecto_edit', { 'id': proyecto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
