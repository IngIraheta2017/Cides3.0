{% extends 'base.html.twig' %}

{% block body %}
    <h1>Observacion</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ observacion.id }}</td>
            </tr>
            <tr>
                <th>Tituloobservacion</th>
                <td>{{ observacion.tituloObservacion }}</td>
            </tr>
            <tr>
                <th>Descripcionobservacion</th>
                <td>{{ observacion.descripcionObservacion }}</td>
